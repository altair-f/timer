#! /bin/bash
# timer v.2.
# displays random picture from Downloads
# here are 2 parallel caunters: 1) for pict; 2) for number - it seems as a slowpoke for pity ((


pic_dir=~/Downloads

npic=`ls $pic_dir|grep jpg|wc|awk '{print $1}'`
rand_npic=$((RANDOM%$npic+1))

i=0

for pic in $pic_dir/*.jpg
do
  i=$(( $i+1 ))
  if [ $i = $rand_npic ]
  then
    DISPLAY=:0 feh "$pic" &
    sleep 3
    kill -SIGKILL %1
    break
  fi
done
    
